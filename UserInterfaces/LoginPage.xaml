<Page x:Class="Project1WilliamClark.CodeBehinds.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#E5F2E5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Login" FontSize="30" FontWeight="Bold" Foreground="#008000" Margin="0,0,0,20"/>
            <TextBlock Text="[Wont Work Until Have An Account Registered]" FontSize="10" FontWeight="Bold" Foreground="#008000" Margin="0,0,0,20"/>
            <TextBox x:Name="txtEmail" PlaceholderText="Template: Email@gmail.com" Margin="0,0,0,10" Width="200" Height="30"/>
            <TextBox x:Name="txtPassword" PlaceholderText="Template: Password" Margin="0,0,0,10" Width="200" Height="30"/>
            <Button Content="Login" Click="Login_Click" Width="100" Height="40" Background="#008000" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>